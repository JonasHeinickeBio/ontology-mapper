# Environment variables for Ontology Mapping Tool
# Copy this to .env and fill in your API keys

# BioPortal API Key (required)
# Get your key from: https://bioportal.bioontology.org/account
BIOPORTAL_API_KEY=your_bioportal_api_key_here

# Optional: UMLS API Key for enhanced functionality
# Get your key from: https://uts.nlm.nih.gov/uts/profile
UMLS_API_KEY=your_umls_api_key_here

# Cache Configuration
# Enable/disable caching of API responses (true/false)
CACHE_ENABLED=true

# Cache time-to-live in seconds (86400 = 24 hours, 0 = no expiration)
CACHE_TTL=86400

# Enable persistent file-based cache (true/false)
CACHE_PERSISTENT=true

# Cache directory location (defaults to ~/.ontology_mapper_cache)
# CACHE_DIR=/path/to/cache

# Maximum cache size in MB (0 = unlimited)
CACHE_MAX_SIZE_MB=100
