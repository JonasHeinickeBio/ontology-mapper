# Environment variables for Ontology Mapping Tool
# Copy this to .env and fill in your API keys

# BioPortal API Key (required)
# Get your key from: https://bioportal.bioontology.org/account
BIOPORTAL_API_KEY=your_bioportal_api_key_here

# Optional: UMLS API Key for enhanced functionality
# Get your key from: https://uts.nlm.nih.gov/uts/profile
UMLS_API_KEY=your_umls_api_key_here

# Cache Configuration
# Enable/disable caching of API responses (true/false)
CACHE_ENABLED=true

# Cache time-to-live in seconds (86400 = 24 hours, 0 = no expiration)
CACHE_TTL=86400

# Enable persistent file-based cache (true/false)
CACHE_PERSISTENT=true

# Cache directory location (defaults to ~/.ontology_mapper_cache)
# CACHE_DIR=/path/to/cache

# Maximum cache size in MB (0 = unlimited)
CACHE_MAX_SIZE_MB=100

# Error Handling & Retry Configuration
# Enable/disable automatic retry mechanism (true/false)
ERROR_RETRY_ENABLED=true

# Maximum number of retry attempts (0-10)
ERROR_MAX_RETRIES=3

# Initial delay before first retry in seconds (0.1-10.0)
ERROR_INITIAL_DELAY=1.0

# Maximum delay between retries in seconds (1.0-300.0)
ERROR_MAX_DELAY=60.0

# Base for exponential backoff calculation (1.5-3.0)
ERROR_EXPONENTIAL_BASE=2.0

# Add random jitter to prevent thundering herd (true/false)
ERROR_RETRY_JITTER=true

# Circuit Breaker Configuration
# Enable/disable circuit breaker pattern (true/false)
ERROR_CIRCUIT_BREAKER_ENABLED=true

# Number of failures before circuit opens (1-20)
ERROR_CIRCUIT_BREAKER_THRESHOLD=5

# Recovery timeout in seconds before attempting to close circuit (10.0-600.0)
ERROR_CIRCUIT_BREAKER_TIMEOUT=60.0

# Timeout Configuration
# Standard request timeout in seconds (5.0-120.0)
ERROR_REQUEST_TIMEOUT=30.0

# Timeout for long operations in seconds (30.0-600.0)
ERROR_LONG_REQUEST_TIMEOUT=120.0

# Network Check Configuration
# Enable pre-flight network connectivity checks (true/false)
ERROR_NETWORK_CHECK_ENABLED=true

# Network check timeout in seconds (1.0-10.0)
ERROR_NETWORK_CHECK_TIMEOUT=3.0

# Logging Configuration
# Enable verbose error logging for debugging (true/false)
ERROR_VERBOSE=false

# Enable logging errors to file (true/false)
ERROR_LOG_TO_FILE=false

# Path to error log file
ERROR_LOG_PATH=logs/errors.log

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=WARNING
